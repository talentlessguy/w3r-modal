{
  "ecmaFeatures": {
    "modules": true
  },
  "extends": ["next", "prettier", "plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "shared-node-browser": true,
    "node": true
  },
  "rules": {
    "prefer-const": "warn",
    "@next/next/no-img-element": "off",
    "@next/next/no-html-link-for-pages": ["error", "packages/website/pages/"]
  },
  "ignorePatterns": ["packages/w3r-modal/dist/*"]
}
